<% provide(:title, 'Contact') %>
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Contact
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><%= link_to 'Home', root_path %>
                    </li>
                    <li class="active"><i class="fa fa-envelope"></i> Contact</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <!-- Map Column -->
						<div class="col-md-7">
                <%= image_tag 'contact-us', :class => 'img-responsive' %>
            </div>
            <!-- Contact Details Column -->
            <div class="col-md-4">
                <h3>Contact Details</h3>
                <p>
                    University of the Aegean<br> Dept. of Information & Communication Systems Engineering<br>
										Information Systems Lab<br>Palama 8, Neo Karlovassi<br>83200 Samos Island, Greece
                </p>
                <p><i class="fa fa-phone"></i> 
                    <abbr title="Phone">P</abbr>: (+30) 22730-7890</p>
                <p><i class="fa fa-envelope-o"></i> 
                    <abbr title="Email">E</abbr>: <a href="mailto:contact@smartups.io">contact@smartups.io</a>
                </p>
                <p><i class="fa fa-clock-o"></i> 
                    <abbr title="Hours">H</abbr>: Monday - Friday: 9:00 AM to 5:00 PM</p>
                <ul class="list-unstyled list-inline list-social-icons">
                    <li>
                        <a href="https://facebook.com/smartupsio/"><i class="fa fa-facebook-square fa-2x"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-linkedin-square fa-2x"></i></a>
                    </li>
                    <li>
                        <a href="https://twitter.com/smartupsio"><i class="fa fa-twitter-square fa-2x"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-google-plus-square fa-2x"></i></a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-youtube-square fa-2x"></i></a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- /.row -->

        <!-- Contact Form -->
        <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
        <div class="row">
            <div class="col-md-7">
                <h3>Send Us A Message</h3>
                <%= form_for(@contact, role: 'form') do |f| %>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Full Name:</label>
                            <%= f.text_field :full_name, autofocus: true, :class => 'form-control', :required => true, :id => 'name' %>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Phone Number:</label>
                            <%= f.text_field :phone_number, autofocus: true, :class => 'form-control', :required => true, :id => 'phone' %>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Email Address:</label>
                            <%= f.text_field :email, autofocus: true, :class => 'form-control', :required => true, :id => 'email' %>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>Message:</label>
                            <%= f.text_area :message, rows: '10', cols: '10', autofocus: true, :class => 'form-control', :required => true, :id => 'message' %>
                        </div>
                      <% if @contact.errors.any? %>
                      <div class="alert alert-success">
                        <p>
  	  									  <ul>
  		                      <% @contact.errors.full_messages.each do |msg| %>
  												    <li><%= msg %>.</li>
  											    <% end %>
  											  </ul>
  	                     </p>
                      </div>
                      <% end %>
                      <% flash.each do |key, value| %>
                    <% end %>
                    </div>
                    <div id="success"></div>
										<div class="alert alert-success">
											<strong>Success!</strong> Indicates a successful or positive action.
										</div>
										<div class="alert alert-danger">
											<strong>Danger!</strong> Indicates a dangerous or potentially negative action.
										</div>
                    <!-- For success/fail messages -->
                    <%= f.submit "Send Message", :class => 'btn btn-primary' %>
                <% end %>
            </div>

        </div>
        <!-- /.row -->