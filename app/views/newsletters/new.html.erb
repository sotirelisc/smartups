<% provide(:title, 'Newsletter') %>
<!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Subscribe
                </h1>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a>
                    </li>
                    <li class="active">Newsletter</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

				<div class="container">
				    <div class="row">
				        <div class="col-md-4 col-md-offset-4">
				            <div class="login-panel panel panel-default">
				                <div class="panel-heading">
				                    <h3 class="panel-title">Subscribe To Our Newsletter</h3>
				                </div>
				                <div class="panel-body">
				                    <form role="form">
				                        <fieldset>
				                            <div class="form-group">
				                            	<%= f.text_field :first_name, :class => 'form-control input-small', :placeholder => 'First name' %>
				                            </div>
				                            <div class="form-group">
				                                <%= f.text_field :last_name, :class => 'form-control', :placeholder => 'Last name' %>
				                            </div>
				                            <div class="form-group">
				                                <%= f.email_field :email, :class => 'form-control', :placeholder => 'E-mail' %>
				                            </div>
																		<div class="alert alert-success">
																			<strong>Success!</strong> Indicates a successful or positive action.
																		</div>
																		<div class="alert alert-danger">
																			<strong>Danger!</strong> Indicates a dangerous or potentially negative action.
																		</div>
				                            <!-- Change this to a button or input when using this as a form -->
				                              <%= f.submit "Subscribe", :class => 'btn btn-lg btn-primary btn-block' %>
				                              <% end %>
				                        </fieldset>
				                    </form>
				                </div>
				            </div>
				        </div>
				    </div>
				</div>