<% provide(:title, 'Newsletter') %>
<!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Newsletter
                </h1>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i> <%= link_to 'Home', root_path %>
                    </li>
                    <li class="active"><i class="fa fa-paper-plane"></i> Newsletter</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

				<div class="container">
				    <div class="row">
				        <div class="col-md-4 col-md-offset-4">
				            <div class="login-panel panel panel-default">
				                <div class="panel-heading">
				                    <h3 class="panel-title">Subscribe To Our Newsletter</h3>
				                </div>
				                <div class="panel-body">
				                    <%= form_for(@newsletter, role: 'form') do |f| %>
				                        <fieldset>
				                       
				                            <div class="form-group">
				                            	<%= f.text_field :first_name, autofocus: true, :class => 'form-control input-small', :placeholder => 'First name' %>
				                            </div>
				                            <div class="form-group">
				                                <%= f.text_field :last_name, :class => 'form-control', :placeholder => 'Last name' %>
				                            </div>
				                            <div class="form-group">
				                                <%= f.email_field :email, :class => 'form-control', :placeholder => 'E-mail' %>
				                            </div>
				                            <% if @newsletter.errors.any? %>
	  				                      	<div class="alert alert-danger">
	  																	<p>
	  																		<ul>
		                                  		<% @newsletter.errors.full_messages.each do |msg| %>
																				  	<li><%= msg %>.</li>
																				  <% end %>
																				</ul>
	                                  	</p>
	  																</div>
                                   <% end %>
                                   <% flash.each do |key, value| %>
                                <div class="alert alert-danger"><center><%= value %></center></div>
                                <% end %>
                                   <div class="form-group">
                                   	 <%= recaptcha_tags %>
                                   	 <br>
                                   </div>
				                             <%= f.submit "Subscribe", :class => 'btn btn-lg btn-primary btn-block' %>
				                        </fieldset>
				                    <% end %>
				                </div>
				            </div>
				        </div>
				    </div>
				</div>